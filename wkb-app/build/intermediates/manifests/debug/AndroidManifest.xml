<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apj.wkb"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.netease.vopen.PERMISSION_WITH_SIGNATURE" />
    <uses-permission android:name="com.android.permission.SEND_NETEASE_POMELO_PUSH_MESSAGE_SERVICE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.apj.wkb.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.apj.wkb.SearchActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.apj.wkb.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.apj.wkb.TestActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.apj.wkb.AppLoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppBaseTheme" >
        </activity>
        <activity
            android:name="com.apj.wkb.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/WelcomeStyle" >
        </activity>
        <activity
            android:name="com.apj.wkb.SearchResultActivity"
            android:screenOrientation="portrait" >
        </activity>

        <provider
            android:name="com.apj.wkb.provider.contentprovider.MyTodoContentProvider"
            android:authorities="com.apj.wkb.todos.contentprovider" />
        <!-- <service android:name=".service.DataIntentService" /> -->
        <service
            android:name="com.apj.wkb.service.MyService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name="com.apj.wkb.VideoPlayerActivity"
            android:label="@string/title_activity_video_player" >
        </activity>
        <activity
            android:name="com.apj.wkb.MyActivity"
            android:label="@string/title_activity_my" >
        </activity>
    </application>

</manifest>