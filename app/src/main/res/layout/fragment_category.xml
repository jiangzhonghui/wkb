        android:layout_height="wrap_content"
        android:text="@string/all_course_filter_source"/>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="全部"
            style="@style/button_selector_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="国内"
            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="国外"
            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="TED"
            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="按最新"
            style="@style/button_selector_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="按最热"
            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

