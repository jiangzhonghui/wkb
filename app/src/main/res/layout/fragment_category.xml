            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="经济"
            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="社会"
            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="法律"
            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="媒体"
            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="伦理"
            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="心理"
            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="管理"
            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="技能"
            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="数学"
            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="物理"
            style="@style/button_selector_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

