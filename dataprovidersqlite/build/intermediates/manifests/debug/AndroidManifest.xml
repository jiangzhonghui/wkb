<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apj.wkb.dataprovidersqlite"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.apj.wkb.dataprovidersqlite.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.apj.wkb.dataprovidersqlite.TodosOverviewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.apj.wkb.dataprovidersqlite.TodoDetailActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>

        <provider
            android:name="com.apj.wkb.dataprovidersqlite.contentprovider.MyTodoContentProvider"
            android:authorities="com.apj.wkb.todos.contentprovider" >
        </provider>
    </application>

</manifest>